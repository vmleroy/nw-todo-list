{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "env": [
        "JWT_SECRET",
        "FRONTEND_URL",
        "NODE_ENV",
        "CORS_ORIGINS",
        "PORT"
      ],
      "cache": false,
      "persistent": true
    },
    "build": {
      "env": [
        "JWT_SECRET",
        "FRONTEND_URL",
        "NODE_ENV",
        "CORS_ORIGINS",
        "PORT"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}